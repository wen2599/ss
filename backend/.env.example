DB_HOST="localhost"
DB_USER="your_db_user"
DB_PASS="your_db_password"
DB_NAME="your_db_name"

# --- Telegram Bot Settings ---
# Your bot's unique token from BotFather
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"

# A secret string sent with every Telegram request to verify its origin.
# Generate a long, random string for this.
TELEGRAM_SECRET_TOKEN="your_secret_token"

# (Optional) Your personal Telegram User ID. If set, the bot will only respond to you.
TELEGRAM_ADMIN_ID="your_telegram_user_id"

# (Required for auto-posting) The ID of the channel the bot should read from.
# Example: -1001234567890
TELEGRAM_CHANNEL_ID=""

# --- JWT Settings ---
# A secret key for signing JSON Web Tokens. Generate a long, random string.
JWT_SECRET="your_jwt_secret"
