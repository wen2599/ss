# ------------------------------------------------------------------
# Application Environment
# ------------------------------------------------------------------
# App environment, e.g., 'development', 'production'
APP_ENV=development

# ------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------

# Database host (e.g., 127.0.0.1 or localhost)
DB_HOST=127.0.0.1

# Database port (e.g., 3306 for MySQL)
DB_PORT=3306

# Database user
DB_USER=root

# Database password
DB_PASSWORD=password

# Database name
DB_DATABASE=test_db

# ------------------------------------------------------------------
# Telegram Bot Configuration
# ------------------------------------------------------------------

# The main token for your Telegram Bot, obtained from BotFather.
TELEGRAM_BOT_TOKEN=

# A secret token used to validate that incoming webhook requests are
# genuinely from Telegram. This should be a long, random string that you
# also provide to Telegram when setting up the webhook.
TELEGRAM_WEBHOOK_SECRET=

# The numeric ID of the specific Telegram channel that the bot is allowed
# to process messages from. This prevents the bot from reacting to messages
# in other channels or groups it might be a part of.
TELEGRAM_CHANNEL_ID=
