; backend/.env.example

; --- Database Configuration ---
DB_HOST=localhost
DB_USER=your_database_user
DB_PASS=your_database_password
DB_NAME=your_database_name

; --- JWT Configuration ---
JWT_SECRET="your_super_secret_key_for_jwt" ; Must be a strong, random string
JWT_EXPIRATION=86400 ; Token expiration time in seconds (86400s = 24 hours)

; --- Security Configuration ---
CLOUDFLARE_WORKER_SECRET="your_secret_key_shared_with_cf_worker"
