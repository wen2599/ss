<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect all requests to the front controller
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Route API requests
    RewriteRule ^api/?$ api.php [QSA,L]
    
    # Route Bot webhook requests
    RewriteRule ^webhook$ bot.php [L]

</IfModule>

# Deny access to sensitive files
<Files ~ "^(\.env|config\.php|import\.php)">
    Order allow,deny
    Deny from all
</Files>

# Optional: Improve security by disabling directory listing
Options -Indexes
