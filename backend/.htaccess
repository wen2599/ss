RewriteEngine On

# 处理前端路由
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# API 路由
RewriteRule ^api/(.*)$ api.php [L,QSA]

# Bot Webhook 路由
RewriteRule ^webhook/(.*)$ bot.php [L,QSA]

# 安全设置
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "import.php">
    Order allow,deny
    Deny from all
</Files>

# 启用 CORS
Header always set Access-Control-Allow-Origin "https://ss.wenxiuxiu.eu.org"
Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization"