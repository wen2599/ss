# ----------------------------------
# 数据库配置
# ----------------------------------
# 数据库主机地址（通常是 localhost）
DB_HOST=localhost

# 数据库用户名
DB_USER=root

# 数据库密码（如果没有密码，请留空）
DB_PASS=

# 数据库名称
DB_NAME=my_database

# ----------------------------------
# 第三方服务 API 密钥
# ----------------------------------
# 你的 Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# 你的 Gemini API 密钥
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# ----------------------------------
# Telegram Bot 配置
# ----------------------------------
# 你的 Telegram Bot 用户名 (不包含 '@' 符号)
TELEGRAM_BOT_USERNAME=YOUR_BOT_USERNAME

# 目标聊天/频道/群组的 ID (可以是数字或 '@username' 格式)
TELEGRAM_CHAT_ID=YOUR_CHAT_ID

# 你的 Telegram 用户 ID (用于管理员权限)
TELEGRAM_ADMIN_ID=YOUR_ADMIN_USER_ID
